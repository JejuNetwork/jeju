{
  "name": "@jejunetwork/example",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Example decentralized app template - demonstrates all Jeju network services",
  "main": "api/index.ts",
  "scripts": {
    "dev": "bun run scripts/dev.ts",
    "build": "bun run scripts/build.ts",
    "start": "bun run scripts/serve.ts",
    "deploy": "bun run scripts/deploy.ts",
    "deploy:skip-verify": "bun run scripts/deploy.ts --skip-verify",
    "verify": "bun run scripts/verify-deployment.ts",
    "verify:local": "bun run scripts/verify-deployment.ts --url http://localhost:4500",
    "verify:testnet": "bun run scripts/verify-deployment.ts --url https://example.testnet.jejunetwork.org",
    "verify:mainnet": "bun run scripts/verify-deployment.ts --url https://example.jejunetwork.org",
    "test": "bun test tests/",
    "test:e2e": "bunx playwright test --config=playwright.config.ts",
    "test:synpress": "bunx synpress --config=synpress.config.ts",
    "test:api": "bun test tests/integration/api.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.1",
    "@elysiajs/eden": "^1.2.3",
    "@jejunetwork/config": "workspace:*",
    "@jejunetwork/db": "workspace:*",
    "@jejunetwork/auth": "workspace:*",
    "@jejunetwork/sdk": "workspace:*",
    "@jejunetwork/shared": "workspace:*",
    "@jejunetwork/types": "workspace:*",
    "elysia": "^1.4.19",
    "p-retry": "^7.1.1",
    "viem": "2.43.3",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@jejunetwork/tests": "workspace:*",
    "@synthetixio/synpress": "4.1.1",
    "@playwright/test": "1.57.0",
    "@types/bun": "latest",
    "concurrently": "^9.1.2",
    "typescript": "5.9.3"
  }
}
